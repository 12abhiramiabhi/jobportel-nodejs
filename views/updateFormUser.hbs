<link rel="stylesheet" href="/stylesheets/updateformuser.css">
<h1 class="head">Update form</h1>
<div class="form">
    <div class="main">
    <form action="/updateFormUser" method="post" enctype="multipart/form-data">
        <table class="table">
           
            <tr>
                <td>Resume</td>
                <td><textarea name="resume" id="" cols="30" rows="3" placeholder="resume"></textarea></td>
            </tr>
            <tr>
                <td>Address</td>
                <td><textarea name="address" id="" cols="30" rows="6" placeholder="address"></textarea></td>
            </tr>

            <tr>
                <td>Experience</td>
                <td><textarea name="experience" id="" cols="30" rows="2" placeholder="experience"></textarea></td>
            </tr>
            <tr>
                <td>Skills</td>
                <td><textarea name="skills" id="" cols="30" rows="2" placeholder="skills"></textarea></td>
            </tr>

            <tr>
                <td>Image</td>
                <td><input type="file" name="image" id=""></td>
            </tr>

        </table>
        <button class="btn" type="submit">Submit</button>

    </form>
</div>
</div>