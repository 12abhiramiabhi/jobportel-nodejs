<link rel="stylesheet" href="/stylesheets/updateform.css">
<h1>Update Form</h1>
<div class="form">
<div class="main">
    <form action="/company/updateProfile" method="post" enctype="multipart/form-data">
        <table class="table">
            <tr>
                <td>Type:</td>
                <td><input type="text"  placeholder="name" name="type" id="ta"></td>
            </tr>
            <tr>
                <td>Discription: </td>
                <td><textarea name="Discription" rows="10" placeholder="discription" id="ta1"></textarea></td>
            </tr>
            <tr>
                <td>Salary :</td>
                <td><input type="number" placeholder="salary" name="location" id="ta"></td>
            </tr>

            <tr>
                <td>Country :</td>
                <td><input type="text" placeholder=" enter country" name="country" id="ta"></td>
            </tr>

            <tr>
                <td>Image :</td>
                <td><input type="file" name="image" accept=".jpg" required="true" id="ta" ></td>
            </tr>

        </table>
        <button>Submit</button>
    </form>
</div>
</div>